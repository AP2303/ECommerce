<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    <meta name="paypal-client-id" content="<%= PAYPAL_CLIENT_ID %>">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="dashboard-container" style="max-width:1000px;margin:20px auto;padding:20px;">
            <h2>Your Cart</h2>
            <% if (products.length > 0) { %>
                <div style="display:grid;gap:12px;">
                    <% let total = 0; products.forEach(p => { total += (p.price || 0) * (p.cartItem.quantity || 1); %>
                      <div style="display:flex;align-items:center;gap:12px;padding:12px;border:1px solid #eee;border-radius:8px;">
                        <div style="width:90px;flex:0 0 90px;">
                          <img src="<%= p.imageUrl && p.imageUrl.indexOf('http')===0 ? ('/images/proxy?src=' + encodeURIComponent(p.imageUrl)) : (p.imageUrl || '/images/placeholder.svg') %>" alt="<%= p.title %>" class="js-img-fallback" data-placeholder="/images/placeholder.svg" style="width:90px;height:120px;object-fit:cover;border-radius:6px;">
                        </div>
                        <div style="flex:1;">
                          <h3 style="margin:0 0 4px 0;"><%= p.title %></h3>
                          <p style="margin:0;color:#666;">Quantity: <%= p.cartItem.quantity %></p>
                          <p style="margin:6px 0 0 0;font-weight:700;">£<%= ((p.price||0) * (p.cartItem.quantity||1)).toFixed(2) %></p>
                        </div>
                        <div>
                          <form action="/cart-delete-item" method="POST">
                            <input type="hidden" name="productId" value="<%= p.id %>">
                            <button class="btn danger" type="submit">Remove</button>
                          </form>
                        </div>
                      </div>
                    <% }) %>
                </div>
                <hr>
                <div style="display:flex;justify-content:space-between;align-items:center;margin-top:12px;">
                  <div style="font-weight:700;">Total: £<%= total.toFixed(2) %></div>
                  <div style="display:flex;gap:10px;align-items:center;">

                    <button id="cart-paypal-btn" class="btn">Pay with PayPal</button>
                  </div>
                </div>
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>
        <div id="paypal-button-container" style="display:none;margin-top:16px"></div>
        <script src="https://www.paypal.com/sdk/js?client-id=<%= PAYPAL_CLIENT_ID %>&currency=GBP&locale=en_GB&intent=capture&components=buttons"></script>
         <script src="/js/cart-paypal.js"></script>
