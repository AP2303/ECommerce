<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .warehouse-dashboard {
            max-width: 1400px;
            margin: 20px auto;
            padding: 20px;
        }
        .warehouse-header {
            background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
            color: white;
            padding: 40px;
            border-radius: 12px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }
        .warehouse-header h1 {
            margin: 0 0 10px 0;
            font-size: 32px;
        }
        .warehouse-header p {
            margin: 0;
            opacity: 0.9;
        }
        #logoutBtn:hover {
            background: #f0f0f0;
            transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        }
        .inventory-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-box {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border-left: 4px solid #27ae60;
        }
        .stat-box.warning {
            border-left-color: #f39c12;
        }
        .stat-box.danger {
            border-left-color: #e74c3c;
        }
        .stat-box h3 {
            margin: 0 0 10px 0;
            color: #666;
            font-size: 13px;
            text-transform: uppercase;
        }
        .stat-box .stat-number {
            font-size: 32px;
            font-weight: bold;
            color: #333;
        }
        .warehouse-sections {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
        }
        .warehouse-section {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        .warehouse-section h2 {
            margin: 0 0 20px 0;
            color: #333;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .task-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .task-item {
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .task-item:last-child {
            margin-bottom: 0;
        }
        .task-info h4 {
            margin: 0 0 5px 0;
            color: #333;
        }
        .task-info p {
            margin: 0;
            color: #666;
            font-size: 13px;
        }
        .task-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }
        .badge-urgent {
            background: #ffe6e6;
            color: #e74c3c;
        }
        .badge-normal {
            background: #fff3e6;
            color: #f39c12;
        }
        .badge-low {
            background: #e6f3ff;
            color: #3498db;
        }
        .action-btn-warehouse {
            display: inline-block;
            padding: 10px 20px;
            background: #27ae60;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-weight: 600;
            transition: 0.3s;
        }
        .action-btn-warehouse:hover {
            background: #229954;
            transform: translateY(-2px);
        }
        .low-stock-table {
            width: 100%;
            border-collapse: collapse;
        }
        .low-stock-table th {
            text-align: left;
            padding: 10px;
            background: #f8f9fa;
            border-bottom: 2px solid #eee;
            font-size: 13px;
            color: #666;
        }
        .low-stock-table td {
            padding: 12px 10px;
            border-bottom: 1px solid #eee;
        }
        .stock-critical {
            color: #e74c3c;
            font-weight: bold;
        }
        .stock-warning {
            color: #f39c12;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="warehouse-dashboard">
        <div class="warehouse-header">
            <div>
                <h1>üì¶ Warehouse Dashboard</h1>
                <p>Inventory management and order fulfillment</p>
            </div>
            <button id="logoutBtn" data-logout style="padding: 12px 30px; background: white; color: #27ae60; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; font-size: 16px;">
                Logout
            </button>
        </div>

        <div class="inventory-stats">
            <div class="stat-box">
                <h3>Total Products</h3>
                <div class="stat-number"><%= locals.totalProducts || 0 %></div>
            </div>
            <div class="stat-box">
                <h3>Total Stock</h3>
                <div class="stat-number"><%= locals.totalStock || 0 %></div>
            </div>
            <div class="stat-box warning">
                <h3>Low Stock Items</h3>
                <div class="stat-number"><%= locals.lowStockCount || 0 %></div>
            </div>
            <div class="stat-box danger">
                <h3>Out of Stock</h3>
                <div class="stat-number"><%= locals.outOfStockCount || 0 %></div>
            </div>
            <div class="stat-box">
                <h3>Orders to Pack</h3>
                <div class="stat-number"><%= locals.ordersToPackCount || 0 %></div>
            </div>
        </div>

        <div class="warehouse-sections">
            <div class="warehouse-section">
                <h2>üöÄ Quick Actions</h2>
                <ul class="task-list">
                    <li>
                        <a href="/warehouse/inventory" class="action-btn-warehouse" style="width: 100%; text-align: center; display: block;">
                            View Full Inventory
                        </a>
                    </li>
                    <li style="margin-top: 10px;">
                        <a href="/warehouse/orders-to-pack" class="action-btn-warehouse" style="width: 100%; text-align: center; display: block;">
                            Orders to Pack (<%= locals.ordersToPackCount || 0 %>)
                        </a>
                    </li>
                    <li style="margin-top: 10px;">
                        <a href="/warehouse/inventory-history" class="action-btn-warehouse" style="width: 100%; text-align: center; display: block;">
                            View Stock History
                        </a>
                    </li>
                </ul>
            </div>

            <div class="warehouse-section">
                <h2>‚ö†Ô∏è Low Stock Alerts</h2>
                <% if (locals.lowStockProducts && locals.lowStockProducts.length > 0) { %>
                    <table class="low-stock-table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>SKU</th>
                                <th>Stock</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% locals.lowStockProducts.slice(0, 5).forEach(product => { %>
                                <tr>
                                    <td><strong><%= product.title %></strong></td>
                                    <td><%= product.sku || 'N/A' %></td>
                                    <td class="<%= product.stock === 0 ? 'stock-critical' : 'stock-warning' %>">
                                        <%= product.stock %>
                                    </td>
                                    <td>
                                        <% if (product.stock === 0) { %>
                                            <span class="task-badge badge-urgent">Out of Stock</span>
                                        <% } else { %>
                                            <span class="task-badge badge-normal">Low Stock</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% if (locals.lowStockProducts.length > 5) { %>
                        <p style="text-align: center; margin-top: 15px;">
                            <a href="/warehouse/inventory?lowStock=true" style="color: #27ae60;">
                                View all <%= locals.lowStockProducts.length %> low stock items ‚Üí
                            </a>
                        </p>
                    <% } %>
                <% } else { %>
                    <p style="text-align: center; color: #27ae60; padding: 40px 0;">
                        ‚úÖ All products are well stocked!
                    </p>
                <% } %>
            </div>

            <div class="warehouse-section">
                <h2>üìã Pending Tasks</h2>
                <ul class="task-list">
                    <% if (locals.pendingTasks && locals.pendingTasks.length > 0) { %>
                        <% locals.pendingTasks.forEach(task => { %>
                            <li class="task-item">
                                <div class="task-info">
                                    <h4><%= task.title %></h4>
                                    <p><%= task.description %></p>
                                </div>
                                <span class="task-badge badge-<%= task.priority %>"><%= task.priority %></span>
                            </li>
                        <% }) %>
                    <% } else { %>
                        <li class="task-item">
                            <div class="task-info">
                                <h4>‚úÖ All caught up!</h4>
                                <p>No pending tasks at the moment</p>
                            </div>
                        </li>
                    <% } %>
                </ul>
            </div>

            <div class="warehouse-section">
                <h2>üìä Recent Activity</h2>
                <% if (locals.recentActivity && locals.recentActivity.length > 0) { %>
                    <ul class="task-list">
                        <% locals.recentActivity.slice(0, 5).forEach(activity => { %>
                            <li class="task-item">
                                <div class="task-info">
                                    <h4><%= activity.action %></h4>
                                    <p><%= activity.details %> - <%= new Date(activity.createdAt).toLocaleString() %></p>
                                </div>
                            </li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p style="text-align: center; color: #999; padding: 40px 0;">
                        No recent activity
                    </p>
                <% } %>
            </div>
        </div>
    </main>


<%- include('../includes/end.ejs') %>

