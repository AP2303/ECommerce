<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <main style="max-width:1100px;margin:20px auto;padding:20px;">
    <h1>Transactions</h1>
    <% if (transactions && transactions.length) { %>
      <table class="table">
        <thead>
          <tr><th>ID</th><th>Amount</th><th>Currency</th><th>Status</th><th>Payer</th><th>Date</th></tr>
        </thead>
        <tbody>
          <% transactions.forEach(t => { %>
            <tr>
              <td><%= t.paymentId || t.id %></td>
              <td>$<%= Number(t.amount || 0).toFixed(2) %></td>
              <td><%= t.currency %></td>
              <td><%= t.status %></td>
              <td><%= t.payerEmail || t.payerName || '—' %></td>
              <td><%= t.createdAt ? new Date(t.createdAt).toLocaleString() : (t.created_at ? new Date(t.created_at).toLocaleString() : '—') %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No transactions found.</p>
    <% } %>
  </main>
<%- include('../includes/end.ejs') %>
