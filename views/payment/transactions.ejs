<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <main style="max-width:1100px;margin:20px auto;padding:20px;">
    <h1>Transactions</h1>
    <% if (transactions && transactions.length) { %>
      <table style="width:100%;border-collapse:collapse;margin-top:12px;background:#fff;">
        <thead>
          <tr style="background:#f8f9fa;text-align:left;">
            <th style="padding:10px;">ID</th>
            <th style="padding:10px;">Order</th>
            <th style="padding:10px;">Amount</th>
            <th style="padding:10px;">Status</th>
            <th style="padding:10px;">Date</th>
          </tr>
        </thead>
        <tbody>
          <% transactions.forEach(t => { %>
            <tr style="border-bottom:1px solid #eee;">
              <td style="padding:10px;"><%= t.id %></td>
              <td style="padding:10px;"><%= t.orderId || '—' %></td>
              <td style="padding:10px;">$<%= (t.amount || 0).toFixed(2) %></td>
              <td style="padding:10px;"><%= t.status || '—' %></td>
              <td style="padding:10px;"><%= new Date(t.createdAt).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No transactions recorded.</p>
    <% } %>
  </main>
<%- include('../includes/end.ejs') %>

