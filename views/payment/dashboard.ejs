<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .finance-dashboard {
            max-width: 1400px;
            margin: 20px auto;
            padding: 20px;
        }
        .finance-header {
            background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
            color: white;
            padding: 40px;
            border-radius: 12px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }
        .finance-header h1 {
            margin: 0 0 10px 0;
            font-size: 32px;
        }
        .finance-header p {
            margin: 0;
            opacity: 0.9;
        }
        #logoutBtn:hover {
            background: #f0f0f0;
            transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        }
        .revenue-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .revenue-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border-top: 4px solid #f39c12;
        }
        .revenue-card.success {
            border-top-color: #27ae60;
        }
        .revenue-card.info {
            border-top-color: #3498db;
        }
        .revenue-card h3 {
            margin: 0 0 10px 0;
            color: #666;
            font-size: 13px;
            text-transform: uppercase;
        }
        .revenue-card .amount {
            font-size: 32px;
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }
        .revenue-card .trend {
            font-size: 13px;
            color: #27ae60;
        }
        .revenue-card .trend.down {
            color: #e74c3c;
        }
        .finance-sections {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
        }
        .finance-section {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        .finance-section h2 {
            margin: 0 0 20px 0;
            color: #333;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .transaction-item {
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .transaction-item:last-child {
            margin-bottom: 0;
        }
        .transaction-info h4 {
            margin: 0 0 5px 0;
            color: #333;
        }
        .transaction-info p {
            margin: 0;
            color: #666;
            font-size: 13px;
        }
        .transaction-amount {
            font-size: 18px;
            font-weight: bold;
            color: #27ae60;
        }
        .transaction-status {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            margin-left: 10px;
        }
        .status-completed {
            background: #e6ffe6;
            color: #27ae60;
        }
        .status-pending {
            background: #fff3e6;
            color: #f39c12;
        }
        .status-failed {
            background: #ffe6e6;
            color: #e74c3c;
        }
        .action-buttons-finance {
            display: grid;
            gap: 10px;
        }
        .action-btn-finance {
            display: block;
            padding: 12px 20px;
            background: #f39c12;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            text-align: center;
            transition: 0.3s;
            font-weight: 600;
        }
        .action-btn-finance:hover {
            background: #e67e22;
            transform: translateY(-2px);
        }
        .summary-table {
            width: 100%;
            border-collapse: collapse;
        }
        .summary-table tr {
            border-bottom: 1px solid #eee;
        }
        .summary-table td {
            padding: 12px 0;
        }
        .summary-table td:first-child {
            color: #666;
        }
        .summary-table td:last-child {
            text-align: right;
            font-weight: 600;
            color: #333;
        }
    </style>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <% // Helper formatters to ensure values are numbers before calling toFixed %>
    <% const formatNumber = (v, digits = 2) => { const n = Number(v); return isFinite(n) ? n.toFixed(digits) : (digits === 0 ? '0' : (digits === 1 ? '0.0' : '0.00')); }; %>
    <% const formatMoney = (v) => formatNumber(v, 2); %>
    <% const formatPercent = (v) => formatNumber(v, 1); %>

    <main class="finance-dashboard">
        <div class="finance-header">
            <div>
                <h1>üí∞ Finance Dashboard</h1>
                <p>Financial overview and payment management</p>
            </div>
            <button id="logoutBtn" data-logout style="padding: 12px 30px; background: white; color: #f39c12; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; font-size: 16px;">
                Logout
            </button>
        </div>

        <div class="revenue-stats">
            <div class="revenue-card success">
                <h3>Total Revenue</h3>
                <div class="amount">$<%= formatMoney(locals.totalRevenue) %></div>
                <div class="trend">‚Üó <%= formatPercent(locals.revenueGrowth) %>% vs last month</div>
            </div>
            <div class="revenue-card">
                <h3>This Month</h3>
                <div class="amount">$<%= formatMoney(locals.monthRevenue) %></div>
                <div class="trend">From <%= locals.monthOrders || 0 %> orders</div>
            </div>
            <div class="revenue-card">
                <h3>Today</h3>
                <div class="amount">$<%= formatMoney(locals.todayRevenue) %></div>
                <div class="trend">From <%= locals.todayOrders || 0 %> orders</div>
            </div>
            <div class="revenue-card info">
                <h3>Avg Order Value</h3>
                <div class="amount">$<%= formatMoney(locals.avgOrderValue) %></div>
                <div class="trend">Per transaction</div>
            </div>
            <div class="revenue-card">
                <h3>Total Transactions</h3>
                <div class="amount"><%= locals.transactionCount || 0 %></div>
                <div class="trend">All time</div>
            </div>
            <div class="revenue-card">
                <h3>Pending Payments</h3>
                <div class="amount"><%= locals.pendingPayments || 0 %></div>
                <div class="trend">Need review</div>
            </div>
        </div>

        <div class="finance-sections">
            <div class="finance-section">
                <h2>üí≥ Quick Actions</h2>
                <div class="action-buttons-finance">
                    <a href="/payment/transactions" class="action-btn-finance">üìã All Transactions</a>
                    <a href="/payment/reports" class="action-btn-finance">üìä Generate Reports</a>
                    <a href="/payment/reconciliation" class="action-btn-finance">‚úÖ Reconciliation</a>
                    <a href="/payment/refunds" class="action-btn-finance">‚Ü©Ô∏è Process Refunds</a>
                </div>
            </div>

            <div class="finance-section">
                <h2>üìä Revenue Breakdown</h2>
                <table class="summary-table">
                    <tr>
                        <td>Completed Orders</td>
                        <td>$<%= formatMoney(locals.completedRevenue) %></td>
                    </tr>
                    <tr>
                        <td>Pending Payments</td>
                        <td>$<%= formatMoney(locals.pendingRevenue) %></td>
                    </tr>
                    <tr>
                        <td>Refunded</td>
                        <td style="color: #e74c3c;">-$<%= formatMoney(locals.refundedAmount) %></td>
                    </tr>
                    <tr style="border-top: 2px solid #333;">
                        <td><strong>Net Revenue</strong></td>
                        <td style="color: #27ae60; font-size: 18px;">
                            $<%= formatMoney((Number(locals.completedRevenue) || 0) - (Number(locals.refundedAmount) || 0)) %>
                        </td>
                    </tr>
                </table>
            </div>

            <div class="finance-section">
                <h2>üíµ Recent Transactions</h2>
                <% if (locals.recentTransactions && locals.recentTransactions.length > 0) { %>
                    <% locals.recentTransactions.slice(0, 5).forEach(transaction => { %>
                        <div class="transaction-item">
                            <div class="transaction-info">
                                <h4>Order #<%= transaction.orderNumber || transaction.orderId %></h4>
                                <p>
                                    <%= new Date(transaction.createdAt).toLocaleString() %>
                                    <span class="transaction-status status-<%= (transaction.status || '').toLowerCase() %>">
                                        <%= transaction.status || 'Unknown' %>
                                    </span>
                                </p>
                            </div>
                            <div class="transaction-amount">
                                $<%= formatMoney(transaction.amount) %>
                            </div>
                        </div>
                    <% }) %>
                    <p style="text-align: center; margin-top: 15px;">
                        <a href="/payment/transactions" style="color: #f39c12;">
                            View all transactions ‚Üí
                        </a>
                    </p>
                <% } else { %>
                    <p style="text-align: center; color: #999; padding: 40px 0;">
                        No recent transactions
                    </p>
                <% } %>
            </div>

            <div class="finance-section">
                <h2>üìà Payment Methods</h2>
                <table class="summary-table">
                    <tr>
                        <td>PayPal</td>
                        <td>$<%= formatMoney(locals.paypalRevenue) %></td>
                    </tr>
                    <tr>
                        <td>Credit Card</td>
                        <td>$<%= formatMoney(locals.creditCardRevenue) %></td>
                    </tr>
                    <tr>
                        <td>Other</td>
                        <td>$<%= formatMoney(locals.otherRevenue) %></td>
                    </tr>
                </table>
            </div>

            <div class="finance-section">
                <h2>‚ö†Ô∏è Requires Attention</h2>
                <% if (locals.attentionItems && locals.attentionItems.length > 0) { %>
                    <% locals.attentionItems.forEach(item => { %>
                        <div class="transaction-item">
                            <div class="transaction-info">
                                <h4><%= item.title %></h4>
                                <p><%= item.description %></p>
                            </div>
                            <a href="<%= item.link %>" class="action-btn-finance" style="padding: 8px 15px; font-size: 13px;">
                                Review
                            </a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p style="text-align: center; color: #27ae60; padding: 40px 0;">
                        ‚úÖ Everything is up to date!
                    </p>
                <% } %>
            </div>

            <div class="finance-section">
                <h2>üìÖ Monthly Summary</h2>
                <table class="summary-table">
                    <tr>
                        <td>Orders This Month</td>
                        <td><%= locals.monthOrders || 0 %></td>
                    </tr>
                    <tr>
                        <td>Average Per Day</td>
                        <td>$<%= formatMoney(locals.avgDailyRevenue) %></td>
                    </tr>
                    <tr>
                        <td>Projected This Month</td>
                        <td>$<%= formatMoney(locals.projectedRevenue) %></td>
                    </tr>
                    <tr>
                        <td>Growth Rate</td>
                        <td style="color: <%= (Number(locals.growthRate) || 0) >= 0 ? '#27ae60' : '#e74c3c' %>">
                            <%= formatPercent(locals.growthRate) %>%
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </main>


<%- include('../includes/end.ejs') %>
