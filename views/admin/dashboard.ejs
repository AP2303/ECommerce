<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .admin-dashboard {
            max-width: 1400px;
            margin: 20px auto;
            padding: 20px;
        }
        .admin-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
            border-radius: 12px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }
        .admin-header h1 {
            margin: 0 0 10px 0;
            font-size: 32px;
        }
        .admin-header p {
            margin: 0;
            opacity: 0.9;
        }
        #logoutBtn:hover {
            background: #f0f0f0;
            transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        }
        .metrics-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .metric-card {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border-top: 4px solid #667eea;
        }
        .metric-card.warning {
            border-top-color: #f39c12;
        }
        .metric-card.success {
            border-top-color: #27ae60;
        }
        .metric-card.danger {
            border-top-color: #e74c3c;
        }
        .metric-card h3 {
            margin: 0 0 10px 0;
            color: #666;
            font-size: 13px;
            text-transform: uppercase;
        }
        .metric-card .value {
            font-size: 36px;
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }
        .metric-card .label {
            color: #999;
            font-size: 12px;
        }
        .admin-sections {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 20px;
        }
        .admin-section {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        .admin-section h2 {
            margin: 0 0 20px 0;
            color: #333;
            font-size: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .section-icon {
            font-size: 24px;
        }
        .action-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .action-list li {
            margin-bottom: 10px;
        }
        .action-list a {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            background: #f8f9fa;
            border-radius: 8px;
            text-decoration: none;
            color: #333;
            transition: 0.3s;
        }
        .action-list a:hover {
            background: #667eea;
            color: white;
            transform: translateX(5px);
        }
        .quick-stats {
            display: grid;
            gap: 10px;
        }
        .quick-stat {
            display: flex;
            justify-content: space-between;
            padding: 10px 15px;
            background: #f8f9fa;
            border-radius: 6px;
        }
        .quick-stat strong {
            color: #333;
        }
        .quick-stat span {
            color: #667eea;
            font-weight: 600;
        }
    </style>
</head>

<body>
