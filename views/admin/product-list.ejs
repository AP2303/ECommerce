<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <%
                                        let imageSrc = '/images/placeholder.svg';
                                        if (product.imageUrl) {
                                          const v = String(product.imageUrl).trim();
                                          if (v.indexOf('http') === 0) {
                                            // Use server-side proxy for remote hosts so images load under our origin (CSP-safe)
                                            imageSrc = '/images/proxy?src=' + encodeURIComponent(v);
                                          } else if (v.indexOf('/') === 0) {
                                            imageSrc = v;
                                          } else {
                                            imageSrc = '/images/' + v;
                                          }
                                        }
                                    %>
                                    <img src="<%= imageSrc %>" alt="<%= product.title %>" width="300" height="420" class="js-img-fallback" data-placeholder="/images/placeholder.svg">
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$
                                        <%= product.price %>
                                    </h2>
                                    <p class="product__description">
                                        <%= product.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-product/<%= product.id %>" class="btn">Edit</a>
                                    <form action="/admin/delete-product" method="POST" class="js-admin-delete" data-admin-delete="1">
                                        <input type="hidden" name="productId" value="<%= product.id %>">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>